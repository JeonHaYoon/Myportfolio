<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myportfolio.web.dao.BoardMapper">

<!--    resultType mybatis에서 alias 해줘서 간결하게 작성 -->
    <select id="select" parameterType="int" resultType="BoardDto">
        select bno, title, cont,  writer, view_cnt, comment_cnt,
               reg_date, up_date, camp_name,camp_cost
        from board
        where bno= #{bno}
    </select>

<!--    게시판 목록 보여줄떄 등록일 번호 역순으로 정렬해-->
    <select id ="selectAll" resultType="BoardDto">
        SELECT bno, title, cont, writer, view_cnt, comment_cnt, reg_date, camp_name,camp_cost
        FROM board
        ORDER BY reg_date DESC, bno DESC
    </select>

    <sql id="selectFromBoard">
        SELECT bno, title, cont, writer, view_cnt, comment_cnt, reg_date, camp_name,camp_cost
        FROM board
    </sql>


<!--게시물 준 내용으로 인서트-->
<insert id="insert" parameterType="BoardDto">
INSERT INTO board(title,cont,writer,camp_name)
VALUES (#{title}, #{cont}, #{writer}, #{camp_name})
</insert>

<!--    게시물 준 내용으로 업데이트-->
<update id="update" parameterType="BoardDto">
UPDATE board
SET title=#{title},
    cont=#{cont},
    camp_name=#{camp_name},
    up_date=now(),
    camp_cost=#{camp_cost}
WHERE bno=#{bno} and writer=#{writer}
</update>

<!--작성자와 일치할때 삭제-->

    <delete id="delete" parameterType="map">
        DELETE FROM board WHERE bno =#{bno} and writer =#{writer}
    </delete>


<!--게시글 다 지우는것-->
    <delete id="deleteAll">
        DELETE FROM board
    </delete>

<!--   관리자 권한으로 삭제-->
    <delete id="deleteForAdmin">
        DELETE FROM board WHERE bno = #{bno}
    </delete>

    <!--조회수 올리는것-->
<update id="increaseViewCnt" parameterType="int">
UPDATE board
SET   view_cnt = view_cnt + 1
WHERE bno = #{bno}
</update>


    <select id="selectPage" parameterType="map" resultType="BoardDto">
        <include refid="selectFromBoard"/>
        ORDER BY reg_date DESC, bno DESC
        LIMIT #{offset}, #{pageSize}
    </select>


    <select id="count" resultType="int">
        SELECT count(*) FROM board
    </select>

    <update id="updateCommentCnt" parameterType="map">
        UPDATE board
        SET   comment_cnt = comment_cnt + #{cnt}
        WHERE bno = #{bno}
    </update>


    <sql id="searchCondition">
        <choose>
            <when test='option=="T"'>
                AND title LIKE concat('%',#{keyword},'%')
            </when>
            <when test='option=="W"'>
                AND writer LIKE concat('%',#{keyword},'%')
            </when>
            <when test='option=="C"'>
                AND camp_name LIKE concat('%',#{keyword},'%')
            </when>
            <otherwise>
                AND (title LIKE concat('%',#{keyword},'%')
                OR content LIKE concat('%',#{keyword},'%'))
            </otherwise>
        </choose>

    </sql>


